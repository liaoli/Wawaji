<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroud_blue</item>
        <item name="colorPrimaryDark">@color/backgroud_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 水平分割线 -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:background">@color/bg_gray</item>
    </style>

    <style name="tv_style1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_style2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

</resources>
